.pages_roll{
  transform-origin:left top;
  transform-style:preserve-3d;  
  perspective:1000;  
  animation: flipBook2 2s forwards;
}
@keyframes flipBook2 {
  0% {
    transform: rotateY(0deg);
    transform: rotateY(0deg)skewY(0deg);
  }
  100% {
    transform: rotateY(-70deg);
    transform: rotateY(-70deg)skewY(25deg);
  }
}
